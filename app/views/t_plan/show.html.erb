  <div class="card-body">
    <h4 class="card-title">Trainingsplan</h4>
    <!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> -->
    <p class="card-text">
      <%= month_calendar do |date| %>
        <% if (training = @trainings.detect {|t| t.t_date == date}) %>
          <%= link_to(training.title, user_training_path(current_user, training)) %>
        <% else %>
          <%= date %>
        <% end %>
      <% end %>
    </p>
